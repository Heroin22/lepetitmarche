
<div class="row">
  <div class="col-md-2 col-md-offset-5">
    <h2>Inscription</h2>
    <fieldset>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="control-group">
          <!-- Pseudo -->
          <label class="control-label"  for="pseudo">Pseudo</label>
          <div class="controls">
            <input type="text" class="form-control" id="user_pseudo" name="user[pseudo]" autofocus="true" placeholder="pseudo">
          </div>
        </div>

        <div class="control-group">
          <!-- Email -->
          <label class="control-label"  for="email">Email</label>
          <div class="controls">
            <input type="email" class="form-control" id="user_email" name="user[email]" aria-describedby="emailHelp" autofocus="true" placeholder="Email">
          </div>
        </div>

        <div class="control-group">
          <!-- Password -->
          <label class="control-label"  for="password">Mot de passe</label>
          <div class="controls">
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
            <% end %><br />
            <input type="password" class="form-control" id="user_password" name="user[password]" autocomplete="off" placeholder="Mot de passe">

          </div>
        </div>

        <div class="control-group">
          <!-- Password -->
          <label class="control-label"  for="password">Confirmation du mot de passe</label>
          <div class="controls">
            <input type="password" class="form-control" id="user_password_confirmation" name="user[password_confirmation]" autocomplete="off" placeholder="Confirmation du mot de passe">
          </div>
        </div>
          </br>
        <div class="actions">
          <button type="submit" class="btn btn-primary">Inscription</button>
        </div>
      <% end %>
    </fieldset>
  </div>
</div>